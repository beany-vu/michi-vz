{
  "compilerOptions": {
    "lib": ["ES2021", "dom"],
    "types": ["jest", "@testing-library/jest-dom"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    //    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "isolatedModules": true,
    "module": "commonjs",
    "target": "ES2019", // Set your desired target version
    "downlevelIteration": true, // Enable downlevel iteration
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    // Better error reporting
    "pretty": true,
    "noErrorTruncation": true,
    "preserveWatchOutput": true,
    // Better debugging in consuming projects
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx", "**/*.test.ts", "**/*.test.tsx"],
  "exclude": ["node_modules", "build", "dist", "stories"]
}
